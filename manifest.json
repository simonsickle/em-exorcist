{
  "manifest_version": 3,
  "name": "Em-Dash Exorcist",
  "version": "1.1.0",
  "description": "Removes em/en dashes and stray hyphen punctuation in ChatGPT messages, fixes capitalization, and stays fast.",
  "permissions": ["storage"],
  "host_permissions": [
    "https://chatgpt.com/*"
  ],
  "content_scripts": [
    {
      "matches": ["https://chatgpt.com/*"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],
  "options_ui": {
    "page": "options.html",
    "open_in_tab": false
  }
}
