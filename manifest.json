{
  "manifest_version": 3,
  "name": "Em-Dash Exorcist",
  "version": "1.0.0",
  "description": "Removes em/en dashes and stray hyphen punctuation in ChatGPT messages, fixes capitalization, and stays fast.",
  "permissions": ["storage"],
  "icons": {
    "1024": "icon.png"
  },
  "host_permissions": [
    "https://chatgpt.com/*"
  ],
  "content_scripts": [
    {
      "matches": ["https://chatgpt.com/*"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],
  "options_ui": {
    "page": "options.html",
    "open_in_tab": false
  },
  "browser_specific_settings": { 
    "gecko": { 
        "id": "simon@sickle.family",
        "strict_min_version": "115.0"
    }
  }
}
